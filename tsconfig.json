{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "rootDir": "server",
    "outDir": "dist",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    "resolveJsonModule": true,
    "sourceMap": true
  },
  "include": ["server/**/*.ts"],
  "exclude": ["node_modules"]
}
